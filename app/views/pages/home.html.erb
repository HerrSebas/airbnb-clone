<div class="main-container">
  <div class="grid-container">
    <% @flats.each do |flat| %>
    <div class="card" style="width: 18rem;">
      <% if flat.photo.present? %>
        <%= cl_image_tag flat.photo.key, class: "card-img-top" %>
      <% end  %>
      <div class="card-body">
        <h5 class="card-title"><%= flat.title %></h5>
        <p class="card-text"><%= flat.description %></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><%= flat.location %></li>
        <li class="list-group-item"><%= flat.category %></li>
        <li class="list-group-item"><%= flat.capacity %> Single Beds </li>
        <li class="list-group-item">$ <%= flat.price %> night</li>
      </ul>
      <div class="card-body">
          <%= link_to "Book now", new_flat_booking_path(flat), class: "btn btn-primary" %>
          <%= link_to "Details", flat_path(flat), class: "btn btn-light" %>

      </div>
    </div>
  <% end %>
  </div>
</div>
<% if user_signed_in? %>
  <%= render "shared/new_flat_button" %>
  <% end %>
