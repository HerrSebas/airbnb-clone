<div class="container m-4 pt-4">
  <div class="col-md-6">
    <h2 class="text-center py-4">Welcome to Airtnt</h2>
    <h3 class="pb-4">Log in</h3>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="py-4 form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions text-center">
        <%= f.button :submit class: 'button-50', "Log in" %>
      </div>
    <% end %>

    <p class="pt-3 text-end"><%= render "users/shared/links" %></p>
  </div>
</div>
