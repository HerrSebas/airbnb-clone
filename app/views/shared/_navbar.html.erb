<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">

  <div class="container-fluid">
    <div>

      <span class="logo-domain">
        <i class="fa-solid fa-house-user"></i>
        <%= link_to "Airtnt", root_path, class: "main-container-navbar logo" %>
      </span>

    </div>

    <span class="welcome-user"> Bienvenido, <%= current_user.name.capitalize %>!</span>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <%if user_signed_in? %>
          <li class="nav-item active pt-2">
            <%= link_to root_path, class: "nav-link navlink-color" do %>
              <i class="fa-sharp fa-solid fa-earth-americas"></i>
              <% end %>
          </li>
          <li class="nav-item active pt-2">
            <%= link_to bookings_path, class: "nav-link navlink-color" do %>
              <i class="fa-solid fa-calendar-check"></i>
              <% end %>
          </li>

          <% if current_user.flats.size > 0 %>
            <li class="nav-item pt-2 pl-2">
              <%= link_to flats_path, class: "nav-link navlink-color" do %>
                <i class="fa-solid fa-building-circle-check"></i>
                <% end %>
            </li>
          <% end  %>

          <li class="nav-item dropdown">
            <% if current_user.photo.present? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <% else %>
            <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://thumbs.dreamstime.com/z/default-avatar-profile-icon-vector-user-image-179582665.jpg" />
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", pages_profile_path, class: "dropdown-item" %>
              <%= link_to "Bookings", bookings_path, class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link navlink-color" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
