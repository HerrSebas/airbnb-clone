<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <h1> <%= link_to "Airtnt", root_path, class: "logo-title nav-link" %></h1>
    <h2> <%= current_user.email %></h2>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", root_path, class: "nav-link navlink-color" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Bookings", user_bookings_path(current_user), class: "nav-link navlink-color" %>
          </li>
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link navlink-color" %>
          </li>
          <li class="nav-item">
            <%= button_to "logout", destroy_user_session_path, method: :delete, class: "nav-link navlink-color" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link navlink-color" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
