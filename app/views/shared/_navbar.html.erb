<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <h1> <%= link_to "Airtnt", root_path, class: "logo-title nav-link" %></h1>
    <h3> Bienvenido, <%= current_user.name %>!</h3>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <%if user_signed_in? %>
          <li class="nav-item active">
            <%= link_to "Home", "#", class: "nav-link navlink-color" %>
          </li>
          <li class="nav-item active">
            <%= link_to "Bookings", bookings_path, class: "nav-link navlink-color" %>
          </li>
          <li class="nav-item">
            <%= link_to "Messages", "#", class: "nav-link navlink-color" %>
          </li>
          <li class="nav-item dropdown">
            <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Profile", "#", class: "dropdown-item" %>
              <%= link_to "Bookings", "#", class: "dropdown-item" %>
              <%= link_to "Log out", destroy_user_session_path, class: "dropdown-item", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Login", new_user_session_path, class: "nav-link navlink-color" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
